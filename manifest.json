{
  "manifest_version": 2,
  "name": "Ship Center",
  "description": "Add your SKU and quantity information your Amazon shipment label",
  "version": "2.0",
  "browser_action": {
    "default_icon" : "assets/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background/main.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "tabs",
    "*://sellercentral.amazon.com/*"
  ]
}
